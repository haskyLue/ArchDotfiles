!大小
URxvt.geometry		: 100x40
! 启动快了
URxvt*preeditType	: Root 
URxvt.saveLines		: 12000
URxvt.loginShell	: true

!---apperance--------------------------------------------------------------------------
!Misc
URxvt.termName    : rxvt-256color
! disable default binding 
URxvt.iso14755	  : false
URxvt.iso14755_52: false 
URxvt.scrollBar   : false
URxvt.scrollstyle: plain
URxvt.transparent: false 
URxvt.cursorBlink: true
 
!XFT font
Xft.dpi: 96
Xft.lcdfilter : lcddefault
Xft.hintstyle : hintsfull
Xft.hinting   : true
Xft.antialias : true
Xft.rgba      : rgb
URxvt.font:xft:Source Code Pro:size=9:style=Regular:antialias=true,\
	xft:方正黑体_GBK:style=Regular:size=10
URxvt.boldfont:xft:Source Code Pro:size=9:style=Bold:antialias=true,\
	xft:方正黑体_GBK:style=Regular:size=10
URxvt.letterSpace : -2

!Colorscheme
*dpth: 32
#include "/home/hasky/Workspace/github/xcolors/xcolor_code/numixdarkest"


!---Extentions--------------------------------------------------------------------------
!Ctrl+Insert can be used to copy and Shift+Insert to paste.

URxvt.perl-ext-common : default,keyboard-select,url-select,clipboard
! URxvt.tabbed.tabbar-fg: 0
! URxvt.tabbed.tabbar-bg: 0
! URxvt.tabbed.tab-fg: 3
! URxvt.tabbed.tab-bg: 0

! Alt+u Enter selection mode. The last URL on your screen will be selected. 
! k Select next upward URL
! j Select next downward URL
! Return Open selected URL in browser and quit selection mode
! o Open selected URL in browser without quitting selection mode
! Esc Cancel URL selection mode
URxvt.keysym.M-u			: perl:url-select:select_next
URxvt.url-select.launcher	: google-chrome-beta  -new-tab
URxvt.url-select.underline	: true
URxvt.url-select.autocopy	: true

! copy paste
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste

! move key
URxvt.keysym.Shift-Up:          \033[1;2A
URxvt.keysym.Shift-Down:        \033[1;2B
URxvt.keysym.Shift-Right:       \033[1;2C
URxvt.keysym.Shift-Left:        \033[1;2D
URxvt.keysym.Control-b:         \002
URxvt.keysym.Control-c:         \003
URxvt.keysym.Control-r:         \022
URxvt.keysym.Control-v:         \026
URxvt.keysym.Control-Up:        \033[1;5A
URxvt.keysym.Control-Down:      \033[1;5B
URxvt.keysym.Control-Left:      \033[1;5D
URxvt.keysym.Control-Right:     \033[1;5C
URxvt.keysym.Control-Page_Up:   \033[5;5~
URxvt.keysym.Control-Page_Down: \033[6;5~
